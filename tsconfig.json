{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist-js",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src-ts/types/*"
            ]
        }
    },
    "include": [
      "src-ts/**/*"
    ]
}
